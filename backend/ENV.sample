DATABASE_URL=postgres://user:password@localhost:5432/rag_chatbot
PORT=3000
NODE_ENV=development

# LLM providers
OPENAI_API_KEY=sk-example
OPENAI_CHAT_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Embeddable widget security
EMBED_JWT_SECRET=replace-this-secret

# Redis / BullMQ
REDIS_URL=redis://127.0.0.1:6379
INGESTION_QUEUE_NAME=ingestion-jobs

# Chunking defaults
CHUNK_MAX_TOKENS=800
CHUNK_OVERLAP_TOKENS=120

# S3 compatible storage
S3_BUCKET=ybm-chatbot
S3_REGION=us-east-1
S3_ACCESS_KEY=local-key
S3_SECRET_KEY=local-secret
# Optional custom endpoint (e.g., http://localhost:9000 for MinIO)
# S3_ENDPOINT=
